<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_enigme_pluies_acides"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pa_03"
    tools:context="com.math.novusmens_git.enigme.EnigmePluiesAcidesActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="45dp"
        android:id="@+id/txtViewPluiesAcides"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/border"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewPluiesAcides"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/btnPluiesAcidesRG"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/border"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/biohazard"
            android:id="@+id/hazard"
            android:gravity="center"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.14" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/btnPluiesAcidesRD"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:clickable="true"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</RelativeLayout>
