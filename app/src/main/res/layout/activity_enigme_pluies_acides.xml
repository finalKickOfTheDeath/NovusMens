<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_enigme_pluies_acides"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pa_03"
    tools:context="com.math.novusmens_git.enigme.EnigmePluiesAcidesActivity">


    <TextView
        android:text="Je dois me rendre de l'autre côté de ces bâtiments, mais les pluies acides ne semblent pas prêtes à s'arrêter ! Comment faire ?"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView1"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#3BFF00"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Je cherche un passage à couvert"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/textView_Q1_2"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#3BFF00"
        android:layout_alignBottom="@+id/textView_Q1_1"
        android:layout_toEndOf="@+id/hazard"
        android:layout_marginLeft="10dp"
        android:onClick="repondre"
        android:clickable="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/biohazard"
        android:id="@+id/hazard"
        android:gravity="center"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/textView_Q1_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Je sors quand même, ce parapluie tiendra !"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/textView_Q1_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#3BFF00"
        android:onClick="repondre"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/hazard" />
</RelativeLayout>
