<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_point_pnj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundl1"
    tools:context="com.math.novusmens_git.enigme.EnigmePNJActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/wolf_head"
        android:id="@+id/imgViewPlayer"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtViewPNJ"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/imgViewPlayer"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgViewPlayer"
        android:layout_alignTop="@+id/imgViewPlayer">

        <Button
            android:text="@string/pointPNJ_btnAgree1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:layout_weight="0.5"
            android:id="@+id/btnAgree" />

        <Button
            android:text="@string/pointPNJ_btnDisagree1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:background="@drawable/border"
            android:id="@+id/btnDisagree" />
    </LinearLayout>

    <TextView
        android:layout_width="400dp"
        android:height="80dp"
        android:text="@string/pointPNJ_dialogStart"
        android:textColor="@color/white"
        android:layout_height="100dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:id="@+id/txtViewPNJ"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fox_head"
        android:id="@+id/imgViewPNJ"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/txtViewPNJ"
        android:layout_toEndOf="@+id/txtViewPNJ" />

    <Button
        android:id="@+id/btnPartirPNJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:text="Partir" />

</RelativeLayout>
