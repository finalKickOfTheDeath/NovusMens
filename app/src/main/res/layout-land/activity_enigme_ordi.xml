<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="1"
    android:background="@drawable/relai_satellite_resize"
    android:orientation="vertical">


    <TextView
        android:text="@string/descEnigmeOrdi"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnigmeOrdi"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@drawable/border"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <TextView
            android:text="@string/inputEnigmeOrdi"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/txtViewInput"
            android:layout_weight="0.85" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextClavier"
            android:layout_weight="10.01"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="63dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            app:srcCompat="@drawable/enterarrow"
            android:id="@+id/imgBtnEnter"
            android:contentDescription="@string/level1_enigmeOrdi_imgBtn"
            android:layout_weight="0.01"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>
